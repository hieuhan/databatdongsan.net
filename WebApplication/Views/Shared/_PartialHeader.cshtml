@using WebApplication.Models
@using databatdongsan.helper
@model HeaderVM
<header class="navbar navbar-expand-md navbar-light d-print-none">
    <div class="container-xl">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-menu">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-nav flex-row order-md-last">
            <div class="d-none d-md-flex">
                <a href="?theme=dark" class="nav-link px-0 hide-theme-dark" title="Bật chế độ hiển thị tối" data-bs-toggle="tooltip" data-bs-placement="bottom">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M12 3c.132 0 .263 0 .393 0a7.5 7.5 0 0 0 7.92 12.446a9 9 0 1 1 -8.313 -12.454z" /></svg>
                </a>
                <a href="?theme=light" class="nav-link px-0 hide-theme-light" title="Bật chế độ hiển thị sáng" data-bs-toggle="tooltip" data-bs-placement="bottom">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><circle cx="12" cy="12" r="4" /><path d="M3 12h1m8 -9v1m8 8h1m-9 8v1m-6.4 -15.4l.7 .7m12.1 -.7l-.7 .7m0 11.4l.7 .7m-12.1 -.7l-.7 .7" /></svg>
                </a>
            </div>
            <div class="nav-item dropdown">
                <a href="@Url.Action("EditProfile","Account")" title="Hồ sơ & tài khoản" class="nav-link d-flex lh-1 text-reset p-0" data-bs-toggle="dropdown" aria-label="Open user menu">
                    <span class="avatar avatar-sm" style="background-image: url(@CurrentUser.Avatar.GetImageUrl_Mobile())"></span>
                    <div class="d-none d-xl-block ps-2">
                        <div>@CurrentUser.UserName</div>
                        <div class="mt-1 small text-muted">@CurrentUser.FullName.TrimmedOrDefault("")</div>
                    </div>
                </a>
                <div class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                    <a href="@Url.Action("EditProfile","Account")" title="Hồ sơ & tài khoản" class="dropdown-item">Hồ sơ & tài khoản</a>
                    <a href="@Url.Action("ChangePassword","Account")" title="Đổi mật khẩu" class="dropdown-item">Đổi mật khẩu</a>
                    <div class="dropdown-divider"></div>
                    <a href="@Url.Action("Logout", "Account")" title="Đăng xuất khỏi hệ thống" onclick="return confirm('Xác nhận đăng xuất khỏi hệ thống ?')" class="dropdown-item">Đăng xuất</a>
                </div>
            </div>
        </div>
        <div class="collapse navbar-collapse" id="navbar-menu">
            <div class="d-flex flex-column flex-md-row flex-fill align-items-stretch align-items-md-center">
                <ul class="navbar-nav">
                    @if (Model.ActionsList.IsAny())
                    {
                        foreach (var item in Model.ActionsList)
                        {
                            <li class="nav-item">
                                <a href="@item.Url.GetUrl()" title="@item.Name" class="nav-link">
                                    @Html.Raw(item.IconPath)
                                    <span class="nav-link-title">
                                        @item.Name
                                    </span>
                                </a>
                            </li>
                        }
                    }
                    <li class="nav-item">
                        <a href="~/src/static/files/sample.xlsx" target="_blank" title="Tải file Excel mẫu" class="nav-link">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-file-spreadsheet" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                <path d="M14 3v4a1 1 0 0 0 1 1h4"></path>
                                <path d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z"></path>
                                <path d="M8 11h8v7h-8z"></path>
                                <path d="M8 15h8"></path>
                                <path d="M11 11v7"></path>
                            </svg>
                            <span class="nav-link-title">
                                File Excel mẫu
                            </span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</header>
