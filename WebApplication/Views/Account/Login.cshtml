@using WebApplication.Models
@using WebApplication.Helpers.Extensions
@{
    Layout = null;
}
@model UserLoginVM
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, target-densitydpi=160dpi, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Đăng nhập hệ thống databatdongsan.net</title>
    <link rel="shortcut icon" href="/src/static/favicon.ico" />
    <!-- CSS files -->
    <link href="/dist/css/tabler.min.css" rel="stylesheet" />
    <link href="/dist/css/tabler-flags.min.css" rel="stylesheet" />
    <link href="/dist/css/tabler-payments.min.css" rel="stylesheet" />
    <link href="/dist/css/tabler-vendors.min.css" rel="stylesheet" />
    <link href="/dist/css/demo.min.css" rel="stylesheet" />
    <link href="~/assets/libs/toastr/toastr.css" rel="stylesheet" />
</head>
<body class=" border-top-wide border-primary d-flex flex-column">
    <div class="page page-center">
        <div class="container-tight py-4">
            <div class="text-center mb-4">
                <p class="navbar-brand navbar-brand-autodark card-title"><img src="/src/static/logo-small.svg" height="36" alt="databatdongsan.net" /> databatdongsan.net</p>
            </div>
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "card card-md", autocomplete = "off" }))
            {
                @Html.AntiForgeryToken()
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Đăng nhập tài khoản của bạn</h2>
                    <div class="mb-3">
                        <label class="form-label">Tên truy cập</label>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Tên truy cập", autofocus = "true", autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-2">
                        <label class="form-label">
                            Mật khẩu
                        </label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Mật khẩu", autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        @Html.HiddenFor(x => x.ReturnUrl)
                    </div>
                    <div class="mb-2">
                        <label class="form-check">
                            <input name="RememberMe" type="checkbox" class="form-check-input" value="true" />
                            <span class="form-check-label">Ghi nhớ trên thiết bị này</span>
                        </label>
                    </div>
                    <div class="form-footer">
                        <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- Libs JS -->
    <!-- Tabler Core -->
    <script src="~/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="./dist/js/tabler.min.js" defer></script>
    <script src="./dist/js/demo.min.js" defer></script>
    <script src="~/assets/libs/toastr/toastr.js"></script>
    @Html.ToastrNotifications()
</body>
</html>