@using WebApplication.Models
@using databatdongsan.helper
@model CustomerInsertOrUpdateVM
@if (Model.CustomerId > 0)
{
    <td class="text-muted">@Model.OrderBy.ToString("#,###")</td>
    <td colspan="3">
        <div class="row">
            <div class="col-xl-4 col-md-12">@Model.Mobile</div>
            <div class="col-xl-4 col-md-12">
                @if (!string.IsNullOrWhiteSpace(Model.Email))
                {
                    <a href="mailto:@Model.Email">@Model.Email</a>
                }
            </div>
            <div class="col-xl-4 col-md-12">@Model.Note</div>
        </div>
    </td>
    <td class="text-muted">
        <div class="row">
            <div class="col-auto">
                <span class="avatar" style="background-image: url(@Model.Avatar.GetImageUrl_Mobile())"></span>
            </div>
            <div class="col">
                <div class="text-truncate">
                    <strong>@Model.CreatedBy</strong>
                </div>
                <div class="text-muted">@Model.Counter.ToString("#,###") khách hàng</div>
            </div>
        </div>
    </td>
    <td class="text-muted">
        @Model.CrDateTime.TimeAgo()
    </td>
    <td>
        <div class="btn-list flex-nowrap">
            <a href="javascript:void(0)" title="Cập nhật thông tin khách hàng" class="edit-customer">
                <span class="nav-link-icon d-md-none d-lg-inline-block">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-edit" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                        <path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1"></path>
                        <path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z"></path>
                        <path d="M16 5l3 3"></path>
                    </svg>
                </span>
            </a>
            <a href="javascript:void(0)" title="Xóa khách hàng" class="remove-customer">
                <span class="nav-link-icon d-md-none d-lg-inline-block text-danger">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trash" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                        <line x1="4" y1="7" x2="20" y2="7"></line>
                        <line x1="10" y1="11" x2="10" y2="17"></line>
                        <line x1="14" y1="11" x2="14" y2="17"></line>
                        <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12"></path>
                        <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3"></path>
                    </svg>
                </span>
            </a>
        </div>
    </td>
}
